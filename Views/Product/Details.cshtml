@model ShopOfManyThings.Models.ProductViewModel

@{
    ViewData["Title"] = @Model.Name;
}

<h1>@Model.Name</h1>

<p><strong>Price:</strong> $@Model.Price</p>
<p><strong>Category:</strong> @Model.Category</p>
<p>@Model.Description</p>

<form method="post" asp-action="AddToCart" asp-route-id="@Model.Id">
    <label for="count">Quantity:</label>
    <input type="number" id="count" name="count" min="1" value="1" required />
    <button type="submit">Add to Cart</button>
</form>

<a href="/Product/Index">Back to All Products</a>
